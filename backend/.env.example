# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/secure-data-wiper
MONGODB_TEST_URI=mongodb://localhost:27017/secure-data-wiper-test

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRE=7d

# Certificate Signing
CERTIFICATE_PRIVATE_KEY_PATH=./certificates/private.key
CERTIFICATE_PUBLIC_KEY_PATH=./certificates/public.key
CERTIFICATE_AUTHORITY_NAME="JNARDDC Secure Wipe Authority"

# API Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# NIST Compliance
NIST_COMPLIANCE_VERSION=SP800-88r1
WIPE_VERIFICATION_REQUIRED=true

# Third-party verification
VERIFICATION_API_ENDPOINT=https://verify.jnarddc.gov.in
VERIFICATION_API_KEY=your-verification-api-key